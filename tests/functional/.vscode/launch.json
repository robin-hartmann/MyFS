  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run AVA test serially",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": [
        "${file}",
        "--serial"
      ],
      "env": {
        "AVA_DEBUG": "true",
        "TS_NODE_FILES": "true" // instructs ts-node to load files from tsconfig.json
      },
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
